<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
<!--        <item name="contentScrim">@color/teal_200</item>-->
<!--        <item name="statusBarScrim">@color/teal_200</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->

    </style>

    <style name="Theme.Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ListItem" parent="Theme.Material">
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/black</item>
    </style>


    <style name="Theme.Material.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Material.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Layouts" parent="Theme.Material">
        <item name="recyclerViewStyle">@style/RecyclerviewStyle</item>
    </style>

    <style name="RecyclerviewStyle">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>