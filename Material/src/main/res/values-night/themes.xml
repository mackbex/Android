<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Material" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
<!--        <item name="contentScrim">?attr/colorPrimaryVariant</item>-->
<!--        <item name="statusBarScrim">?attr/colorPrimaryVariant</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
    </style>



    <style name="ListItem" parent="Theme.Material">
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


    <style name="Layouts" parent="Theme.Material">
        <item name="recyclerViewStyle">@style/RecyclerviewStyle</item>
    </style>

    <style name="RecyclerviewStyle">
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">#323232</item>
        <item name="materialButtonStyle">@style/CardViewButtonStyle</item>
    </style>
    <style name="CardViewButtonStyle" >
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>
    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>